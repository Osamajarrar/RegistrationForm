<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    android:orientation="vertical"
    tools:context=".RegistrationForm">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/txtRF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="Android Course Enrollment"
        android:textColor="@color/white"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/txtName"
        style="@style/field_title"
        android:text="Name" />

    <EditText
        android:id="@+id/edtTxtName"
        style="@style/input_field"
        android:hint="Type Your First and Last Name Please"
        android:singleLine="false" />

    <TextView
        android:id="@+id/txtEmail"
        style="@style/field_title"
        android:text="Email" />

    <EditText
        android:id="@+id/edtTxtEmail"
        style="@style/input_field"
        android:hint="Type Your Email Address Please" />

    <TextView
        android:id="@+id/txtDOB"
        style="@style/field_title"
        android:text="Date of Birth" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/day"
            style="@style/spinner_style" />

        <Spinner
            android:id="@+id/month"
            style="@style/spinner_style" />

        <Spinner
            android:id="@+id/year"
            style="@style/spinner_style" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtDescription"
        style="@style/field_title"
        android:text="Why Enroll?" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:gravity="start|top"
            android:hint="Why Do You Want To Enroll In This Couese?"
            android:inputType="textMultiLine"
            android:textColorHint="@color/white"
            android:textSize="16dp" />
    </ScrollView>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Save"
        android:onClick="save_onClick"/>

</LinearLayout>